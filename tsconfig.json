{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "outDir": "lib",
    "noEmitOnError": true,
    "target": "es6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/__tests__"]
}
